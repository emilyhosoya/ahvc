        a(href='#carousel' role='button' data-slide='prev').left.carousel-control
          span(aria-hidden='true').glyphicon.glyphicon-chevron-left
          span.sr-only Previous
        a(href='#carousel' role='button' data-slide='next').right.carousel-control
          span(aria-hidden='true').glyphicon.glyphicon-chevron-right
          span.sr-only Next